@model global::Service.ViewModels.Account.RegistrationViewModel

<div id="registration">
    <h1 class="account-title">@Resource.Action_RegisterNow</h1>
    <div class="account-content">
        @using (Html.BeginForm("ValidateRegistration", "Account"))
        {
            @Html.ValidationSummary(false)
            @Html.TextBoxFor(model => model.UserName, new { placeholder = @Resource.Field_UserName, @class = "form-control" })
            @Html.TextBoxFor(model => model.Email, new { placeholder = @Resource.Field_Email, @class = "form-control" })
            @Html.PasswordFor(model => model.Password, new { placeholder = @Resource.Field_Password, @class = "form-control" })
            @Html.PasswordFor(model => model.ConfirmPassword, new { placeholder = @Resource.Field_PasswordConfirmation, @class = "form-control" })
            <button class="btn btn-block account-button" type="submit">
                <i class="fa fa-lock"></i>
                @Resource.Action_Register
            </button>
        }
    </div>
    <div class="account-footer">
        <p>@Resource.Content_AlreadyAnAccount</p>
        @Html.ActionLink(Resource.Action_LoginNow, "Login", "Account")
    </div>
</div>