@model global::Service.ViewModels.Account.RegistrationViewModel

<div id="registration">
    <h1 class="account-title">@Resource.Account_RegisterNow</h1>
    <div class="account-content">
        @using (Html.BeginForm("ValidateRegistration", "Account"))
        {
            @Html.ValidationSummary(false)
            @Html.TextBoxFor(model => model.UserName, new { placeholder = @Resource.Account_UserName, @class = "form-control" })
            @Html.TextBoxFor(model => model.Email, new { placeholder = @Resource.Account_Email, @class = "form-control" })
            @Html.PasswordFor(model => model.Password, new { placeholder = @Resource.Account_Password, @class = "form-control" })
            @Html.PasswordFor(model => model.ConfirmPassword, new { placeholder = @Resource.Account_PasswordConfirmation, @class = "form-control" })
            <button class="btn btn-block account-button" type="submit">
                <i class="fa fa-lock"></i>
                @Resource.Account_Register
            </button>
        }
        <hr />
        <p>@Resource.Account_AlreadyAnAccount</p>
        @Html.ActionLink(Resource.Account_LoginNow, "Login", "Account")
    </div>
</div>