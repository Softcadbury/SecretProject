@model global::Service.ViewModels.Account.ConnectionViewModel

<div id="connection">
    <h1 class="account-title">@Resource.Account_SignInNow</h1>
    <div class="account-content">
        @using (Html.BeginForm("ValidateConnection", "Account"))
        {
            @Html.ValidationSummary(false)
            @Html.TextBoxFor(model => model.UserName, new { placeholder = @Resource.Account_UserName, @class = "form-control" })
            @Html.PasswordFor(model => model.Password, new { placeholder = @Resource.Account_Password, @class = "form-control" })
            <button class="btn btn-block account-button" type="submit">
                <i class="fa fa-lock"></i>
                @Resource.Account_SignIn
            </button>
        }
    </div>
</div>