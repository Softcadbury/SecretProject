<div id="contactModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resource.Site_Close</span></button>
                <h4 class="modal-title">@Resource.Site_About_ContactBody</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="inputMessage">@Resource.Site_Message</label>
                    <textarea class="form-control" id="inputMessage" ng-model="userName" placeholder="@Resource.Site_Message_PlaceHolder"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">@Resource.Site_Cancel</button>
                <button class="btn btn-primary">@Resource.Site_Send</button>
            </div>
        </div>
    </div>
</div>