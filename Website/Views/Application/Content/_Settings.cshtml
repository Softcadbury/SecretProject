@Html.Partial("Modals/_PictureCroppingModal")
@Html.Partial("Modals/_DeleteAccountConfirmationModal")

<div id="settingsContent">
    <h1 class="page-title">@Resource.Common_Settings</h1>

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Common_Language</label>
            <div class="col-sm-9 col-lg-10">
                @Html.Partial("_LanguageSelection")
            </div>
        </div>
    </div>

    <hr />

    <div class="form-horizontal">
        <div ng-show="saveChangesSuccess" class="alert alert-success">@Resource.Success_UserUpdated</div>
        <div ng-show="saveChangesError" ng-bind-html="saveChangesError" class="alert alert-danger"></div>
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Common_Avatar</label>
            <div class="col-sm-9 col-lg-10">
                <img class="img-thumbnail" src="~/Content/man.jpg" alt="user" width="100" height="100" ng-click="openPictureCroppingModal()">
            </div>
        </div>
        <div class="form-group">
            <label for="inputUserName" class="col-sm-3 col-lg-2 control-label">@Resource.Field_UserName</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" id="inputUserName" ng-model="userName">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-sm-3 col-lg-2 control-label">@Resource.Field_Email</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" id="inputEmail" ng-model="userEmail">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" ng-click="updateUser($event)">@Resource.Action_UpdateUser</button>
            </div>
        </div>
    </div>

    <hr />

    <div class="form-horizontal">
        <div ng-show="savePasswordSuccess" class="alert alert-success">@Resource.Success_PasswordUpdated</div>
        <div ng-show="savePasswordError" ng-bind-html="savePasswordError" class="alert alert-danger"></div>
        <div class="form-group">
            <label for="inputActualPassword" class="col-sm-3 col-lg-2 control-label">@Resource.Field_PasswordActual</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" type="password" id="inputActualPassword" ng-model="actualPassword">
            </div>
        </div>
        <div class="form-group">
            <label for="inputNewPassword" class="col-sm-3 col-lg-2 control-label">@Resource.Field_PasswordNew</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" type="password" id="inputNewPassword" ng-model="newPassword">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPasswordConfirmation" class="col-sm-3 col-lg-2 control-label">@Resource.Field_PasswordConfirmation</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" type="password" id="inputPasswordConfirmation" ng-model="passwordConfirmation">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" ng-click="updatePassword($event)">@Resource.Action_UpdatePassword</button>
            </div>
        </div>
    </div>

    <hr />

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Common_Account</label>
            <div class="col-sm-9 col-lg-10">
                <button class="btn btn-danger" ng-click="deleteAccount()">@Resource.Action_DeleteAccount</button>
            </div>
        </div>
    </div>
</div>