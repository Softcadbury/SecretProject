<h1 class="page-title">@Resource.Site_Settings</h1>

<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-3 col-lg-2 control-label">@Resource.Site_Language</label>
        <div class="col-sm-9 col-lg-10">
            @Html.Partial("_LanguageSelection")
        </div>
    </div>
    <div class="form-group">
        <label for="inputUserName" class="col-sm-3 col-lg-2 control-label">@Resource.Account_UserName</label>
        <div class="col-sm-9 col-lg-10">
            <input class="form-control" id="inputUserName" ng-model="userName">
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail" class="col-sm-3 col-lg-2 control-label">@Resource.Account_Email</label>
        <div class="col-sm-9 col-lg-10">
            <input class="form-control" id="inputEmail" ng-model="userEmail">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-default">@Resource.Site_SaveChanges</button>
        </div>
    </div>
</form>