<div id="settingsContent">
    <h1 class="page-title">@Resource.Site_Settings</h1>

    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Site_Language</label>
            <div class="col-sm-9 col-lg-10">
                @Html.Partial("_LanguageSelection")
            </div>
        </div>
    </form>

    <hr />

    <form class="form-horizontal" role="form">
        <div ng-show="userUpdateSuccess" class="alert alert-success" role="alert">@Resource.Site_UserUpdated</div>
        <div ng-show="userUpdateError" class="alert alert-danger" role="alert">error</div>
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Site_Avatar</label>
            <div class="col-sm-9 col-lg-10">
                <img class="img-thumbnail" src="~/Content/man.jpg" alt="user" width="100" height="100">
                <input class="form-control" type="file" ng-model="userPicture">
            </div>
        </div>
        <div class="form-group">
            <label for="inputUserName" class="col-sm-3 col-lg-2 control-label">@Resource.Account_UserName</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" id="inputUserName" ng-model="userName">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-sm-3 col-lg-2 control-label">@Resource.Account_Email</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" id="inputEmail" ng-model="userEmail">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-primary" ng-click="saveChanges()">@Resource.Site_SaveChanges</button>
            </div>
        </div>
    </form>

    <hr />

    <form class="form-horizontal" role="form">
        <div ng-show="passwordUpdateSuccess" class="alert alert-success" role="alert">@Resource.Site_PasswordUpdated</div>
        <div ng-show="passwordUpdateError" class="alert alert-danger" role="alert">error</div>
        <div class="form-group">
            <label for="inputActualPassword" class="col-sm-3 col-lg-2 control-label">@Resource.Account_PasswordActual</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" type="password" id="inputActualPassword" ng-model="actualPassword">
            </div>
        </div>
        <div class="form-group">
            <label for="inputNewPassword" class="col-sm-3 col-lg-2 control-label">@Resource.Account_PasswordNew</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" type="password" id="inputNewPassword" ng-model="newPassword">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPasswordConfirmation" class="col-sm-3 col-lg-2 control-label">@Resource.Account_PasswordConfirmation</label>
            <div class="col-sm-9 col-lg-10">
                <input class="form-control" type="password" id="inputPasswordConfirmation" ng-model="passwordConfirmation">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-primary" ng-click="savePassword()">@Resource.Site_SavePassword</button>
            </div>
        </div>
    </form>

    <hr />

    <form class="form-horizontal" role="form">
        <div ng-show="deleteAccountError" class="alert alert-danger" role="alert">error</div>
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Site_Account</label>
            <div class="col-sm-9 col-lg-10">
                <button type="submit" class="btn btn-danger" ng-click="deleteAccount()">@Resource.Site_DeleteAccount</button>
            </div>
        </div>
    </form>
</div>