<div id="aboutContent">
    <h1 class="page-title">@Resource.Site_About</h1>

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Site_About_Contact</label>
            <div class="col-sm-9 col-lg-10">
                <button class="btn btn-primary" data-toggle="modal" data-target="#contactModal">@Resource.Site_About_ContactBody</button>
            </div>
        </div>
    </div>

    <hr />

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Site_About_Terms</label>
            <div class="col-sm-9 col-lg-10">
                <p>@Resource.Site_About_TermsBody</p>
            </div>
        </div>
    </div>

    <hr />

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">@Resource.Site_About_Privacy</label>
            <div class="col-sm-9 col-lg-10">
                <p>@Resource.Site_About_PrivacyBody</p>
            </div>
        </div>
    </div>
</div>