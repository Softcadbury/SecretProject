@{
    Layout = "./_Layout.cshtml";
}

<div ng-app="app">
    <div id="page" class="container-fluid">
        <div id="header" class="navbar navbar-inverse navbar-fixed-top header-navbar" role="navigation">
            @Html.Partial("_Header")
        </div>
        <div class="container-fluid">
            <div class="row">
                <div id="menu" class="col-sm-3 col-md-2 menu-sidebar">
                    @Html.Partial("_Menu")
                </div>
                <div id="content" class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
                    <ng-view></ng-view>
                </div>
            </div>
        </div>
    </div>
</div>